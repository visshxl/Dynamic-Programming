https://www.geeksforgeeks.org/problems/longest-common-substring1452/1?itm_source=geeksforgeeks&itm_medium=article&itm_campaign=practice_card
class Solution {
  public:
//   viualize the dp matrix for the clearer intuition
// tabulation of the lcs leetcode
    int longestCommonSubstr(string s1, string s2) {
        vector<vector<int>> dp(s1.size()+1, vector<int>(s2.size()+1, 0));
        int maxi=-1;
        for(int ind1=1; ind1<=s1.size(); ind1++){
            for(int ind2=1; ind2<=s2.size(); ind2++){
                if(s1[ind1-1]==s2[ind2-1]) dp[ind1][ind2]=1+dp[ind1-1][ind2-1];
                else
                    dp[ind1][ind2]=0;
                // isme agar match nhi hua to sidha 0 krdete h instead of taking max
                maxi=max(maxi, dp[ind1][ind2]);
            }
        }
        return maxi;
    }
};
// dp 27
